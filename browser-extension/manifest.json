{
  "manifest_version": 3,
  "name": "VaultNote Bookmark Sync",
  "version": "1.0",
  "description": "Sync bookmarks with VaultNote app and GitHub across all devices",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "scripting",
    "contextMenus",
    "bookmarks"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "VaultNote Sync",
    "default_popup": "popup.html"
  },
  "options_page": "settings.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "vaultnote@bookmark.extension"
    }
  }
}
